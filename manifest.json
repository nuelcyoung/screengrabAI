{
  "manifest_version": 3,
  "name": "ScreenGrab AI",
  "version": "1.1.0",
  "description": "AI-powered screenshot capture and analysis tool. Extract and analyze text from any webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://vision.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScreenGrab AI - Screenshot Analyzer"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "utils.js",
        "selector.js",
        "result-display.js",
        "progress-indicator.js",
        "floating-icon.js"
      ],
      "css": [
        "selector.css",
        "result-display.css",
        "floating-icon.css"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "selector.css",
        "selector.js",
        "floating-icon.css",
        "floating-icon.js",
        "ai-service.js",
        "capture-queue.js",
        "result-display.css",
        "result-display.js",
        "utils.js",
        "progress-indicator.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}